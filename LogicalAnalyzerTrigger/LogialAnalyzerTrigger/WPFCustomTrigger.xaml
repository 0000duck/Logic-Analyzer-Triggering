<Window x:Class="LogialAnalyzerTrigger.WPFCustomTrigger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomTriggerWindow" Height="410.864" Width="610.522" Loaded="Loaded_MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="59" Height="111*"/>
            <RowDefinition Height="239*"/>
            <RowDefinition Height="30*" MaxHeight="30"/>
        </Grid.RowDefinitions>
        <Grid x:Name="_headerGrid"  Height="Auto" Margin="0,0,0,0"  Width="Auto" MaxHeight="59" Background="#FFD3CFCF">
            <Label Content="Make custom statements for quick accsess to often used ones, or for buliding complex triggers."/>
        </Grid>
        <ScrollViewer x:Name="_formScrollViewer" Margin="0,0,0,0" Grid.Row="1"  Width="Auto"/>
        <Grid x:Name="_buttonGrid"  Height="Auto" Margin="0,0,0,0" Grid.Row="2"  Width="Auto" Background="#FFEBEBEB" >
            <Button x:Name="_saveButton" Content="Save" HorizontalAlignment="Right" Width="75" Click="Click_SaveButton"/>
            <Button x:Name="_cancelButton" Content="Cancel" Margin="0,0,139,0" HorizontalAlignment="Right" Width="75" Click="Click_CancelButton"/>
        </Grid>
		<TextBox x:Name="_nameInputTextBox" Margin="0,36,483,0" TextWrapping="Wrap" Text="{Binding TriggerName}"/>

    </Grid>
</Window>
