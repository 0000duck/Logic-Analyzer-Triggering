<Window x:Class="LogialAnalyzerTrigger.Views.ThenOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThenOperationsWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition MaxHeight="40" />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Path=ObservableThenOperations}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding Path=AvalibleThenOperations}" SelectedValue="{Binding Path=ThenOperationString}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Row="1"> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Add Then Operation" Command="{Binding AddThenOperationCommand}" />
            <Button Grid.Column="1" Content="Save" Command="{Binding SaveCommand}" />
        </Grid>
    </Grid>
</Window>
